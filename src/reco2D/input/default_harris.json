//                * Input-File for reconnection code *
{
    //----------------------------Space and Time discretization------------
    "n"  : 3,   //(# of x,y-polynomials)
    "Nx" : 100,  //(grid points in x)
    "Ny" : 100,  //(grid points in y)
    "dt" : 0.005,//(time step in units c_s/rho_s)
    //-------------------------------Output parameters--------------------
    "n_out" : 3,    //(# of x-y polynomials in output)
    "Nx_out" : 100,  //(# grid points in output field)
    "Ny_out" : 100,  //(# grid points in output field)
    "itstp"  : 2,   //(steps between outputs)
    "maxout" : 300,  //total # of outputs (excluding first)
    //-------------------------------Algorithmic parameters---------------------
    "eps_pol"    : 1e-6, //( stop for polarisation)   
    "jumpfactor" : 1, //jumpfactor â‚¬ [0.01,1]
    "eps_maxwell": 1e-7, //( stop for induction equ.) 
    "eps_gamma"  : 1e-14, //( stop for Gamme operator) 
    "eps_time"   : 1e-14, //( stop for time inversion) 
    //----------------------Physical parameters----------------------------
    "mu"          : -0.000544617, //(-m_e/m_i) -0.000544617, -0.000272121, -0.000181372
    "tau"         : 1,      //T_i/T_e
    "beta"        : 1e-3,      //Plasma beta 
    "nu_perp"     : 1e-8,   //  (perpendicular viscosity, roughly 0)
    //---------------------Initial perturbation parameters and setup ---------------------
    "initmode"      : 0.0, // (initmode (harris 0 / island 1)
    "amplitude0" : 1e-1, // (eq amplitude)
    "amplitude1" : 1e-5, // (fluc amplitude)
    "mY"        : 1,  //y-mode number
    //-------------------------------Sim Setup-----------------------------
    "lxhalf"  : 10,   //(in units rho_s)   
    "lyhalf"  : 20   //(in units rho_s)
}
